<div id='infoContato' class='direita'>
  <% @empresa = Empresa.first %>
  <% if @empresa != nil %>
    <label class='fonte25'>
      <%= @empresa.telefone1 %>
      <% if @empresa.telefone2? %>
        / <%= @empresa.telefone2 %>
      <% elsif @empresa.celular? %>
        / <%= @empresa.celular %>
      <% end %>
    </label>
    <br>
    <label>E-mail: <%= @empresa.email %> </label>
  <% end %>
</div>

